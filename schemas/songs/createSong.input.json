{
    "title": "Create a song",
    "description": "This endpoint create a song.",
    "method": "POST",
    "route": "/songs",
    "auth": true,
    "type": "object",
    "properties": {
        "title": {
            "type": "string",
            "description": "The title is the musical seed of your song.",
            "pattern": "^[a-zA-Z ]*$",
            "minLength": 4
        },
        "arrangement_id": {
            "oneOf": [{
                "type": "integer",
                "minimum": 0
            }, {
                "type": "null"
            }]
        },
        "tags": {
            "type": "array",
            "items":{
                "type": "string"
            }
        },
        "desired_length": {
            "type": "integer",
            "description": "The desired duration of your song in senconds.",
            "minimum": 0
        }
    },
    "required": ["title", "arrangement_id", "tags", "desired_length"]
}
