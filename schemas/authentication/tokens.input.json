{
    "title": "OAuth",
    "description": "This endpoint permits to authenticate with an external provider (OAuth).",
    "method": "PUT",
    "route": "/oauth",
        "type":"object",
        "properties":{
            "provider":{
                "enum":["facebook", "twitter"]
            },
            "provider_token":{
                "type": "string"
            },
            "uuid":{
                    "type": "string"
            }
        },
        "required": ["provider", "provider_token", "uuid"]
}
